<!-- DO NOT REMOVE : GLOBAL FUNCTIONS! -->
<script>
    $(document).ready(function () {
        pageSetUp();
        drawBreadCrumb();



		@if (TempData["SuccessMessage"] != null)
		{
			// long boring green text
		}

		// global message display. To use it in a page just put : TempData["Message"] = "<your message>"
		@if (TempData["Message"] != null)
		{
		<text>
        $.smallBox({
            title: "Message : ",
            content: "@Json.Encode(TempData["Message"])",
            color: "#739E73",
            iconSmall: "fa fa-lg fa-check bounce animated",
            timeout: 10000
        });
		</text>
		}


		@if (TempData["ErrorMessage"] != null)
		{
		<text>
		$.bigBox({
            title: "Oh no...",
            content: "@Json.Encode(TempData["ErrorMessage"])",
            color: "#C46A69",
            //timeout: 6000,
            icon: "fa fa-warning",
            number: "1"
		});
		</text>
		}
    });
</script>

