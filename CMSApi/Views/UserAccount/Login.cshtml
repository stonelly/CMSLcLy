@using CMSApi.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.PageClass = "animated fadeIn";
}

<div class="form_wrapper">
    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6"><h1 class="semi-bold">Sign In</h1></div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 text-right"><h1 class="margin-top-0"><img src="~/Content/img/logo.png" alt="" height="40" /></h1></div>
    </div>
    <form action="@Url.Action("login", "UserAccount")" method="POST" id="login-form" class="@ViewBag.PageClass">  
        @Html.AntiForgeryToken()
        <fieldset>
            <div class="row">
                <section class="col col-12">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                <input class="form-control input-lg input-prepend" placeholder="User Name" type="text" name="Email">
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="row">
                <section class="col col-12">
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-key"></i></span>
                                <input class="form-control input-lg input-prepend" placeholder="Password" type="password" name="password">
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            @if (ViewData.ModelState.ContainsKey("duplicate"))
            {
                <div class="row">
                    <section class="col col-12">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                                    <input class="form-control input-lg input-prepend" placeholder="Email" type="email" name="email">
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            }

            <div class="note"> <a href="@Url.Action("forgotpassword", "UserAccount")">Forgot password?</a> </div>
            <div class="margin-bottom-10"></div>
            <button type="submit" class="btn btn-primary btn-block btn-lg clearfix"> Sign In </button>
        </fieldset>
    </form>
</div>